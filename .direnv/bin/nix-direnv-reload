#!/usr/bin/env bash
set -e
if [[ ! -d "/mnt/kael/data/Documents/Projects/Missing-Time" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/mnt/kael/data/Documents/Projects/Missing-Time")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/mnt/kael/data/Documents/Projects/Missing-Time" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/mnt/kael/data/Documents/Projects/Missing-Time/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/mnt/kael/data/Documents/Projects/Missing-Time/.envrc" "/mnt/kael/data/Documents/Projects/Missing-Time/.direnv"/*.rc
